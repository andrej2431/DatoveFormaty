{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://example.org/schema-1.json",
    "type": "object",
    "title": "Evidence továren na sladkosti",
    "properties": {
        "suroviny": {
            "type": "array",
            "items": {
                "type": "object",
                "title": "surovina",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "název": {
                        "type": "object",
                        "properties": {
                            "cs": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "cs"
                        ]
                    },
                    "cena za kg": {
                        "type": "number"
                    },
                    "obsahuje": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "title": "id alergenu"
                        }
                    }
                },
                "required": [
                    "id",
                    "název",
                    "cena za kg"
                ]
            }
        },
        "alergeny": {
            "type": "array",
            "items": {
                "type": "object",
                "title": "alergen",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "název": {
                        "type": "object",
                        "properties": {
                            "cs": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "cs"
                        ]
                    },
                    "číslo": {
                        "type": "number"
                    }
                },
                "required": [
                    "id",
                    "název",
                    "číslo"
                ]
            }
        }
    },
    "required": [
        "alergeny",
        "suroviny"
    ]
}
